#Tests putting large binary files
#
#

./httpserver.dep 8080 &
sleep 0.25

printf "HTTP/1.1 201 Created\r\nContent-Length: 0\r\n\r\n" >createdtext

FAIL=0

printf "Binary PUT test pass\n" >expected


curl -si   localhost:8080/large -T randlarge >response

if ! cmp -s response createdtext; then
    printf "Response is incorrect:\n"
    cat response
    printf "\nExpected:\n"
    cat expected
    FAIL=1
fi

if ! cmp -s large randlarge; then
    printf "Binary files differ\n"
    FAIL=1
fi

if ! $FAIL; then 
    printf "Binary PUT test pass\n"
fi



rm large
rm response
rm createdtext


pkill httpserver.dep